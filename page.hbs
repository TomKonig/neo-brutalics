{{!< default}}
<section class="wrap page pad-top">
  {{#post}}
    {{#match @page.show_title_and_feature_image "=" true}}
      <header class="post-head">
        <h1 class="h1">{{title}}</h1>
        {{#if feature_image}}
          <figure class="post-figure">
            <img src="{{img_url feature_image size="l"}}" alt="{{title}}" class="post-image nb-shadow-lg"/>
            {{#if feature_image_caption}}<figcaption class="caption">{{feature_image_caption}}</figcaption>{{/if}}
          </figure>
        {{/if}}
      </header>
    {{/match}}
    <div class="prose"><section class="gh-content gh-canvas">{{content}}</section></div>
  {{/post}}
</section>
